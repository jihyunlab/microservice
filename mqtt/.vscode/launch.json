{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "runtimeExecutable": "nest",
      "runtimeArgs": ["start", "--debug=9001", "--watch", "server"],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Client",
      "runtimeExecutable": "nest",
      "runtimeArgs": ["start", "--debug=9002", "--watch", "client"],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "dev"
      },
      "console": "integratedTerminal"
    }
  ]
}
